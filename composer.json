{
  "name": "chipinside/laravel-translation-manager",
  "description": "Manage Laravel Translations",
  "keywords": [
    "laravel",
    "translations",
    "translator"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Barry vd. Heuvel",
      "email": "barryvdh@gmail.com"
    },
    {
      "name": "Jose Vicente Orts Romero",
      "email": "jvortsromero@gmail.com"
    },
    {
      "name": "Emilio B. Pedrollo",
      "email": "emilio.pedrollo@cowmed.com.br"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-json": "*",
    "illuminate/support": "^8|^9",
    "illuminate/translation": "^8|^9",
    "symfony/finder": "^5|^6"
  },
  "require-dev": {
    "orchestra/testbench": "^6|^7"
  },
  "suggest": {
     "tanmuhittin/laravel-google-translate": "If you want to translate using Google API"
  },
  "autoload": {
    "psr-4": {
      "Barryvdh\\TranslationManager\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Barryvdh\\TranslationManager\\Tests\\": "tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.6-dev"
    },
    "laravel": {
      "providers": [
        "Barryvdh\\TranslationManager\\ManagerServiceProvider"
      ],
      "aliases": {
        "Translator": "Barryvdh\\TranslationManager\\Translator"
      }
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
